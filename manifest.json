{
  "manifest_version": 3,
  "name": "LaBeouf Blocker",
  "version": "3.0.0",
  "description": "Boost your productivity and focus by channeling your inner Shia. Block distracting or harmful websites with a click.",
  "permissions": ["activeTab", "storage", "tabs"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "HTML/options.html",
  "web_accessible_resources": [
    {
      "resources": ["HTML/blocked.html", "HTML/options.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "JS/background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["JS/content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "HTML/popup.html",
    "default_title": "Configure your preferences",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
