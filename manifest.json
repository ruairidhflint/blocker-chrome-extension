{
  "manifest_version": 2,
  "name": "Website Blocker",
  "version": "1.0.0",
  "description": "A Test Project to Block Websites",
  "short_name": "website_blocker",
  "permissions": ["activeTab", "declarativeContent", "storage", "<all_urls>"],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": ["blocked.html"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
      {
          "matches":["http://*/*", "https://*/*"],
          "js": ["content.js"],
          "run_at": "document_start"
      }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Configure your preferences",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
